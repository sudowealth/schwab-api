{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"isolatedModules": true,
		"module": "ESNext",
		"target": "ES2022",
		"strict": true,
		"skipLibCheck": true,
		"noUncheckedIndexedAccess": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "tests"]
}
